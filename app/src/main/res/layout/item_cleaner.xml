<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_56"
    android:layout_marginTop="@dimen/size_16"
    android:background="@drawable/bg_stroke_1_color_gray_radius_100">

    <ImageView
        android:id="@+id/imgIcon"
        android:layout_width="@dimen/size_34"
        android:layout_height="@dimen/size_34"
        android:layout_marginStart="@dimen/size_20"
        android:layout_marginTop="@dimen/size_24"
        android:layout_marginBottom="@dimen/size_24"
        android:src="@drawable/ic_wifi_connected"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_10"
        android:text="Wifi Name"
        android:textColor="@color/grayC4CDE2"
        app:layout_constraintVertical_chainStyle="packed"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/tvDec"
        app:layout_constraintStart_toEndOf="@id/imgIcon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_10"
        android:text="@string/text_connected"
        android:textColor="@color/grayB3C4CDE2"
        android:textSize="@dimen/text_size_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgIcon"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <ImageView
        android:id="@+id/imgIcon_selected"
        android:layout_width="@dimen/size_40"
        android:layout_height="@dimen/size_40"
        android:layout_marginEnd="@dimen/size_8"
        android:padding="@dimen/size_8"
        android:src="@drawable/bg_checkbox_selected"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
