<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/black23253A">

    <ImageView
        android:id="@+id/iv_next"
        android:layout_width="@dimen/size_40"
        android:layout_height="@dimen/size_40"
        android:layout_marginTop="@dimen/size_20"
        android:gravity="center"
        android:padding="@dimen/size_5"
        android:rotation="270"
        android:src="@drawable/ic_chevron_right"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <NumberPicker
        android:id="@+id/tvNumberPicker"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="@dimen/size_10"
        android:gravity="center"
        android:text="12"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16"
        app:layout_constraintBottom_toTopOf="@id/iv_previous"
        app:layout_constraintEnd_toEndOf="@+id/iv_next"
        app:layout_constraintStart_toStartOf="@+id/iv_next"
        app:layout_constraintTop_toBottomOf="@+id/iv_next" />

    <ImageView
        android:id="@+id/iv_previous"
        android:layout_width="@dimen/size_40"
        android:layout_height="@dimen/size_40"
        android:layout_marginBottom="@dimen/size_20"
        android:gravity="center"
        android:padding="@dimen/size_5"
        android:rotation="90"
        android:src="@drawable/ic_chevron_right"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNumberPicker" />

</androidx.constraintlayout.widget.ConstraintLayout>