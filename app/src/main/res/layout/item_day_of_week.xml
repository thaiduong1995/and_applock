<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_10"
        android:text="Mon"
        android:textColor="@color/grayC4CDE2"
        app:layout_constraintEnd_toEndOf="@+id/iv_time_selected"
        app:layout_constraintStart_toStartOf="@+id/iv_time_selected"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_time_selected"
        android:layout_width="@dimen/size_40"
        android:layout_height="@dimen/size_40"
        android:padding="@dimen/size_8"
        android:src="@drawable/day_unselected"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_day" />

    <TextView
        android:id="@+id/tv_day2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="M"
        android:textSize="@dimen/text_size_12"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/iv_time_selected"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_time_selected" />

</androidx.constraintlayout.widget.ConstraintLayout>