<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="360"
                android:endColor="@color/blue18A8FF"
                android:startColor="@color/blue4543FE"
                android:type="linear" />
            <size
                android:width="24dp"
                android:height="24dp" />
            <corners android:radius="@dimen/size_20" />
        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#373843" />
            <corners android:radius="@dimen/size_20" />
        </shape>
    </item>

</layer-list>
