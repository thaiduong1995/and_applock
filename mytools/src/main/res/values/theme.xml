<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NotHideDialog" />

    <style name="DialogAnimation">
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="DialogStyle" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:background">@android:color/transparent</item>
        <item name="windowFixedWidthMajor">85%</item>
        <item name="windowFixedWidthMinor">85%</item>
        <item name="android:windowBackground">
            @android:color/transparent
        </item>
    </style>


    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />

    <style name="BaseBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BaseBottomSheetEditText" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:windowSoftInputMode">adjustResize|stateVisible</item>
    </style>

    <style name="BottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/ic_background_bottom_sheet</item>
    </style>
</resources>